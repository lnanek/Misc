<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="fill_parent"
    a:layout_height="wrap_content"
    >
	<LinearLayout 
	    a:orientation="vertical"
	    a:layout_width="fill_parent"
	    a:layout_height="wrap_content"
	    a:gravity="top"
	    a:background="@drawable/white_rounded_and_shadow"
	    a:layout_marginLeft="10dp"
	    a:layout_marginRight="10dp"
	    a:padding="10dp"
	    >	
		<LinearLayout 
		    a:layout_width="fill_parent"
		    a:layout_height="wrap_content"
		    a:orientation="horizontal"
	   		a:gravity="center"
		    a:layout_marginLeft="10dp"
		    a:layout_marginRight="10dp"
		    >
			<Button  
				a:id="@+id/previous" 
			    a:layout_height="wrap_content"
			    a:layout_width="wrap_content"
			    a:padding="5dp"
			    a:textSize="14sp"
			    a:textStyle="bold"
			    a:textColor="#fff"
			    a:gravity="center"
			    a:text="&lt;&lt;" 
			    a:background="@drawable/htc_button_dark"
			    />		
			<TextView  
				a:id="@+id/title" 
			    a:layout_height="wrap_content"
			    a:layout_width="wrap_content"
			    a:padding="5dp"
			    a:textSize="14sp"
			    a:textStyle="bold"
			    a:textColor="#000"
			    a:gravity="center"	    
			    />
			<Button 
				a:id="@+id/next" 
			    a:layout_height="wrap_content"
			    a:layout_width="wrap_content"
			    a:padding="5dp"
			    a:textSize="14sp"
			    a:textStyle="bold"
			    a:textColor="#fff"
			    a:gravity="center"
			    a:text=">>"
			    a:background="@drawable/htc_button_dark"
			    />
		</LinearLayout>
		<LinearLayout   
		    a:id="@+id/gridview"
		    a:layout_width="fill_parent" 
		    a:layout_height="wrap_content"
	  		a:orientation="vertical"	    
		    a:layout_marginTop="10dp"
			>
			<include layout="@layout/lock_screen_calendar_row"/>		
			<include layout="@layout/lock_screen_calendar_row"/>
			<include layout="@layout/lock_screen_calendar_row"/>
			<include layout="@layout/lock_screen_calendar_row"/>
			<include layout="@layout/lock_screen_calendar_row"/>
			<include layout="@layout/lock_screen_calendar_row"/>	    
		</LinearLayout>
	</LinearLayout>
</FrameLayout>
