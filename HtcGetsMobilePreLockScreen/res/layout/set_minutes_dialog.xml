<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="wrap_content"
    a:layout_height="wrap_content"
    a:padding="20dp"
    a:orientation="vertical"    
    a:background="@drawable/rounded_border"
    >
	<TextView 
		a:text="Enter number of minutes:"
		a:layout_width="wrap_content"
		a:layout_height="wrap_content"
		a:textSize="14sp"
		a:textStyle="bold"
		a:textColor="#000"
		/>
	<com.htc.sample.getsmobile.view.DoodleEditText 
		a:id="@+id/set_minutes_dialog_minutes"
		a:layout_width="match_parent"
		a:layout_height="match_parent"
		a:gravity="center"
		a:textColor="#73b20e"
		a:inputType="number"
		/>
	<Button 
		a:id="@+id/set_minutes_dialog_done" 
	    a:layout_height="wrap_content"
	    a:layout_width="wrap_content"
	    a:padding="5dp"
	    a:paddingLeft="20dp"
	    a:paddingRight="20dp"
	    a:textSize="14sp"
	    a:textStyle="bold"
	    a:textColor="#fff"
	    a:gravity="center"
	    a:text="Done"
	    a:background="@drawable/htc_button_dark"
	    a:layout_gravity="right"
	    />
</LinearLayout>
